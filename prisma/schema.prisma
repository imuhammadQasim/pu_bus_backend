generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Location {
  id        Int          @id @default(autoincrement())
  name      String
  type      LocationType
  lat       Float
  lng       Float
  info      String
  address   String
  image     String
  createdAt DateTime     @default(now())
}

enum LocationType {
  CAMPUS
  HOSTEL
  GROUND
  GATE
}
