generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Location {
  id        String       @id @default(uuid())
  name      String
  type      LocationType
  lat       Float
  lng       Float
  info      String
  address   String
  image     String
  createdAt DateTime     @default(now()) @map("created_at")

  @@map("location")
}

enum LocationType {
  CAMPUS
  HOSTEL
  GROUND
  GATE
}

model Route {
  id    String @id @default(uuid())
  name  String
  desc  String
  color String

  waypoints Waypoint[]
  batches   RouteBatch[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("routes")
}

model Waypoint {
  id   String @id @default(uuid())
  name String
  lat  Float
  lng  Float

  route   Route  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId String @map("route_id")

  @@map("waypoints")
}

model RouteBatch {
  id    String    @id @default(uuid())
  batch BatchType

  route   Route  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId String @map("route_id")

  @@map("route_batches")
}

enum BatchType {
  MORNING
  AFTERNOON
  EVENING
}
